<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wb.tracun.markup.produtosSalvos">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        ads:srcCompat="@android:drawable/ic_menu_camera" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_below="@+id/imgProduct"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProduct"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtNome"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="11dp"
                    android:layout_weight="1"
                    android:text="ID:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtId"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtNome"
                    android:layout_alignLeft="@+id/txtNome"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="0"
                    android:inputType="number"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtNome"
                    android:layout_alignBottom="@+id/txtNome"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:text="Nome:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtId"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Nome"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtLucro"
                    android:layout_marginBottom="11dp"
                    android:layout_toStartOf="@+id/txtCusto"
                    android:layout_toLeftOf="@+id/txtCusto"
                    android:layout_weight="1"
                    android:text="Custo:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCusto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNome"
                    android:layout_alignStart="@+id/txtNome"
                    android:layout_alignLeft="@+id/txtNome"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="R$ 0,00"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtEncargo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="11dp"
                    android:layout_weight="1"
                    android:text="Lucro:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtLucro"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCusto"
                    android:layout_alignStart="@+id/txtCusto"
                    android:layout_alignLeft="@+id/txtCusto"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="%"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtEncargo"
                    android:layout_alignBottom="@+id/txtEncargo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:text="Encargo:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtEncargo"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLucro"
                    android:layout_alignStart="@+id/txtComissao"
                    android:layout_alignLeft="@+id/txtComissao"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="%"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtCustoIndireto"
                    android:layout_alignBottom="@+id/txtCustoIndireto"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:text="Custo Indireto:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCustoIndireto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtEncargo"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="%"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtComissao"
                    android:layout_alignBottom="@+id/txtComissao"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:text="Comissão:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtComissao"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCustoIndireto"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="%"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtImp1"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignBottom="@+id/txtImp1"
                    android:text="Imposto 1:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtImp1"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtComissao"
                    android:layout_toEndOf="@+id/textView9"
                    android:layout_toRightOf="@+id/textView9"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="%"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_toEndOf="@+id/txtImp1"
                    android:layout_toRightOf="@+id/txtImp1"
                    android:layout_weight="1"
                    android:text="Imposto 2:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtImp2"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtImp1"
                    android:layout_alignBottom="@+id/txtImp1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/textView10"
                    android:layout_toRightOf="@+id/textView10"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="%"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtOutro"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_alignLeft="@+id/textView9"
                    android:layout_alignBottom="@+id/txtOutro"
                    android:layout_weight="1"
                    android:text="outros:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtOutro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtImp1"
                    android:layout_alignEnd="@+id/txtImp1"
                    android:layout_alignRight="@+id/txtImp1"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="%"
                    android:inputType="numberDecimal"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="__________________________________________________________________________" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtPrecoFora"
                    android:layout_alignBottom="@+id/txtPrecoFora"
                    android:layout_toStartOf="@+id/txtOutro"
                    android:layout_toLeftOf="@+id/txtOutro"
                    android:layout_toRightOf="@+id/txtPrecoFora"
                    android:layout_weight="1"
                    android:text="Preço dentro:"
                    android:textAllCaps="false"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/txtPrecoDentro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textView16"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="R$ 0,00"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtPrecoFora"
                    android:layout_alignStart="@+id/textView13"
                    android:layout_alignLeft="@+id/textView13"
                    android:layout_alignBottom="@+id/txtPrecoFora"
                    android:layout_weight="1"
                    android:text="Preço Fora:"
                    android:textAllCaps="false"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/txtPrecoFora"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txtOutro"
                    android:layout_alignRight="@+id/txtOutro"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/textView15"
                    android:layout_toRightOf="@+id/textView15"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="R$ 0,00"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:visibility="visible"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-0943131909791545/2375075380" />

</RelativeLayout>
